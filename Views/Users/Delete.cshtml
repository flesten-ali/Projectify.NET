@model Practice.Models.Project

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Discreption)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Discreption)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.pdfURL)
        </dt>
        <dd class = "col-sm-10">
            @if(Model.pdfURL!=null && Model.pdfURL.Length>0){
                @Html.DisplayFor(model => model.pdfURL)
            }
            else
            {
                <p>
                    No Provided PDF
                </p>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfPublish)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfPublish)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.category)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
